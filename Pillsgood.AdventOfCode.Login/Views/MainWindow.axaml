<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:Pillsgood.AdventOfCode.Login.ViewModels"
        xmlns:webViewControl="clr-namespace:WebViewControl;assembly=WebViewControl.Avalonia"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Pillsgood.AdventOfCode.Login.Views.MainWindow"
        Title="Pillsgood.AdventOfCode.Login">
    <Design.DataContext>
        <viewModels:MainViewModel />
    </Design.DataContext>

    <Panel>
        <webViewControl:WebView
            IsVisible="{Binding WebViewVisible}"
            x:Name="WebView"
            Address="{Binding Address}" />
        <TextBlock
            IsVisible="{Binding !WebViewVisible}"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            Authentication complete, please close this window to continue.
        </TextBlock>
    </Panel>
</Window>